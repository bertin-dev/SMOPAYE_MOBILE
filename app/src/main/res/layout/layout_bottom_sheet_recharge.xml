<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/bottomSheetContainerRecharge"
    android:background="@drawable/bottom_sheet_background">



    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/rechargeEZ"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_twotone_account_balance_wallet_48"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/showDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="@color/bgColorStandard"
            android:text="@string/recharge"
            android:textSize="18sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="10dp"
        android:background="@color/colorDivider"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="40"
            android:gravity="center"
            android:layout_gravity="center_vertical">


            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/orange_money"
                android:layout_margin="1dp"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/amount_recharge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="500 FCFA"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/textColorBlack"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/telephone_recharge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tel: 694048925"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/textColorBlack"
                android:textSize="12sp"/>


        </LinearLayout>


        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="20"
            android:src="@drawable/ic_baseline_arrow_forward_24"
            android:layout_margin="10dp"
            android:scaleType="centerCrop"/>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="40"
            android:gravity="center"
            android:layout_gravity="center_vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/pub_ezpass"
                android:layout_margin="1dp"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/accountEZPASS"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:gravity="center"
                android:text="NÂ°123456789"
                android:textColor="@color/textColorBlack"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/name_recharge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tel: 6990903867"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/textColorBlack"
                android:textSize="12sp"/>

        </LinearLayout>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorDivider"/>

    <!--Espace comptes-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/u"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/espaceCompte"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/grisFonce"
            android:layout_gravity="center_horizontal|center_vertical"
            android:textSize="10sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:weightSum="100"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/grisFonce"
                    android:src="@drawable/ic_account_circle_gris_24dp"
                    android:layout_marginLeft="10dp" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="25dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="25dp"
                        android:textColor="@color/textColorBlack"
                        android:text="@string/numCompte"
                        android:textSize="15sp"/>
                    <TextView
                        android:id="@+id/account_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="25dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="25dp"
                        android:text="BDAADA51"
                        android:textColor="@color/grisFonce"
                        android:textSize="10sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="25dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="25dp"
                        android:textColor="@color/textColorBlack"
                        android:text="@string/proprietaire"
                        android:textSize="15sp"/>
                    <TextView
                        android:id="@+id/proprietaire"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="25dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="25dp"
                        android:text="Bertin Mounok"
                        android:textColor="@color/grisFonce"
                        android:textSize="10sp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/grisFonce"
                    android:src="@drawable/ic_check_circle_gris_24dp"
                    android:layout_marginLeft="10dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="25dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="25dp"
                        android:textColor="@color/textColorBlack"
                        android:text="@string/etatCompte"
                        android:textSize="15sp"/>
                    <TextView
                        android:id="@+id/state_account"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="25dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="25dp"
                        android:text="Activer"
                        android:textColor="@color/grisFonce"
                        android:textSize="10sp"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:visibility="visible"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnValidRecharge"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:padding="10dp"
            android:paddingStart="30dp"
            android:paddingLeft="30dp"
            android:paddingEnd="30dp"
            android:paddingRight="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:shadowDx="@android:integer/config_longAnimTime"
            android:background="@drawable/btn_rounded"
            android:text="@string/valider" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorDivider"/>


</LinearLayout>