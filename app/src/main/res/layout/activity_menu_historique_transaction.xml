<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/menuHistoriqueTransaction"
    android:background="@color/white"
    tools:context=".Manage_Transactions_History.MenuHistoriqueTransaction">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/myToolbar"
            layout="@layout/bar_layout"/>

        <LinearLayout
            android:id="@+id/historiqueRecharge"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_forward_black_24dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/bgColorStandard"
                android:textSize="20sp"
                android:textStyle="bold|italic"
                android:background="@drawable/edittextborder"
                android:layout_gravity="center_vertical|center_horizontal"
                android:drawableEnd="@drawable/ic_keyboard_arrow_right_black_24dp"
                android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"
                android:text="@string/recharge"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/historiqueTelecollecte"
            android:focusable="true"
            android:clickable="true"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_forward_black_24dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/bgColorStandard"
                android:textSize="20sp"
                android:textStyle="bold|italic"
                android:background="@drawable/edittextborder"
                android:layout_gravity="center_vertical|center_horizontal"
                android:drawableEnd="@drawable/ic_keyboard_arrow_right_black_24dp"
                android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"
                android:text="@string/telecollecte"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/historiqueDebit"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_forward_black_24dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/bgColorStandard"
                android:textSize="20sp"
                android:textStyle="bold|italic"
                android:background="@drawable/edittextborder"
                android:layout_gravity="center_vertical|center_horizontal"
                android:drawableEnd="@drawable/ic_keyboard_arrow_right_black_24dp"
                android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"
                android:text="@string/Debit"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/historiqueTransfert"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_forward_black_24dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/bgColorStandard"
                android:textSize="20sp"
                android:textStyle="bold|italic"
                android:background="@drawable/edittextborder"
                android:layout_gravity="center_vertical|center_horizontal"
                android:drawableEnd="@drawable/ic_keyboard_arrow_right_black_24dp"
                android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"
                android:text="@string/transfert"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>